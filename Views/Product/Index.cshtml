@model IEnumerable<Recepboyvat.ECommerceMVCWeb.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Yeni Urun</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Urun", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CombinationNumber)
            </th>
            <th style="width:170px;"></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            <img src="~/Upload/@item.Image" width="70" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (item.IsHome)
        {
            <td>
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Evet
                </label>
            </td>
        }
        else
        {
            <td>
                <label class="badge badge-danger">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Hayir
                </label>
            </td>
        }
        @if (item.IsApproved)
        {
            <td>
                <label class="badge badge-success">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Evet
                </label>
            </td>
        }
        else
        {
            <td>
                <label class="badge badge-danger">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    Hayir
                </label>
            </td>
        }


      
        <td>
            @Html.DisplayFor(modelItem => item.CombinationNumber)
        </td>
        <td>
            @Html.ActionLink("Guncelle", "Edit", new { id = item.Id },new { @class="btn btn-primary btn-sm"}) |
            
            @Html.ActionLink("Sil", "Delete", new { id = item.Id },new { @class="btn btn-danger btn-sm"})
        </td>
    </tr>
        }

    </table>
</div>